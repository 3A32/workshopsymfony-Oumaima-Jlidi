{% extends 'base.html.twig' %}
{%block body%}
<center><table border=1 class="card-title">
       <div class="card-header header-elements-inline" style="background-color:Teal">
						<h3 class="card-title" style="color:white">Listes des students</h3>

        <thead>
            <tr>
                <th colspan="5">CIN</th>
                <th colspan="5">Username</th>
                <th colspan="5">Classroom</th>
